html
  head
    meta(http-equiv="content-type", content="text/html; charset=utf8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" type="text/css" href="/css/style.css")
    script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(type="text/javascript", src="/js/main.js")

  body
    nav.navbar
      h2 NBA Stats
    .container-fluid
      .row.mb-4.mt-2
        .col-12
          span#back
            i.fa.fa-arrow-left
            |  Back
      .row
        .col-12
          h1= playerObj.name
      .row
        .col-sm-6.col-md-4.col-lg-3
          img(src=playerObj.img)
          .d-flex.align-items-center.justify-content-between.pt-2
            .text-left
              .text-muted Height
              h4= playerObj.data.height
            .text-left
              .text-muted Weight
              h4= playerObj.data.weight
                | lbs
          .d-flex.align-items-center.justify-content-between.mt-2
            .text-left
              span.text-muted BORN
            .text-right
              span.text-muted= playerObj.data.dob
          .d-flex.align-items-center.justify-content-between
            .text-left
              span.text-muted AGE
            .text-right
              span.text-muted= playerObj.data.age
                |  years old

        .col-lg-9
          p.bio= playerObj.bio
      .row.mt-4
        .col-12
          table.table
            tbody
              thead
                tr
                  th
                  th MPG
                  th FG%
                  th 3P%
                  th FT%
                  th PPG
                  th RPG
                  th APG
                  th BPG
            if (playerObj.seasonStats)
              tr
                th SEASON
                td= playerObj.seasonStats.mpg
                td= playerObj.seasonStats.fg
                td= playerObj.seasonStats.tp
                td= playerObj.seasonStats.ft
                td= playerObj.seasonStats.ppg
                td= playerObj.seasonStats.rpg
                td= playerObj.seasonStats.apg
                td= playerObj.seasonStats.bpg
            if (playerObj.careerStats)
              tr
                th CAREER
                td= playerObj.careerStats.mpg
                td= playerObj.careerStats.fg
                td= playerObj.careerStats.tp
                td= playerObj.careerStats.ft
                td= playerObj.careerStats.ppg
                td= playerObj.careerStats.rpg
                td= playerObj.careerStats.apg
                td= playerObj.careerStats.bpg
